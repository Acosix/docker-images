<?xml version='1.0' encoding='UTF-8'?>
<alfresco-config>

	<config replace="true">
		<flags>
			<client-debug>%DEBUG%</client-debug>
			<client-debug-autologging>false</client-debug-autologging>
		</flags>
	</config>

	<config evaluator="string-compare" condition="WebFramework">
		<web-framework>
			<autowire>
				<mode>%MODE%</mode>
			</autowire>

			<module-deployment>
				<mode>manual</mode>
				<enable-auto-deploy-modules>true</enable-auto-deploy-modules>
			</module-deployment>
		</web-framework>
	</config>

	<config evaluator="string-compare" condition="DocumentLibrary">
		<repository-url>http://%PUBLIC_REPOSITORY_HOST%:%PUBLIC_REPOSITORY_PORT%/alfresco</repository-url>
	</config>

	<config evaluator="string-compare" condition="CSRFPolicy">
		<properties>
			<referer>https?://%PUBLIC_SHARE_HOST_PATTERN%%PUBLIC_SHARE_PORT_PATTERN%/.*</referer>
			<origin>https?://%PUBLIC_SHARE_HOST_PATTERN%%PUBLIC_SHARE_PORT_PATTERN%/.*</origin>
		</properties>
	</config>

	<!--%ACCESS_PUBLIC_REPOSITORY_VIA_SSL%
	<config evaluator="string-compare" condition="DocumentLibrary">
		<repository-url>https://%PUBLIC_REPOSITORY_HOST%:%PUBLIC_REPOSITORY_SSL_PORT%/alfresco</repository-url>
	</config>
	%ACCESS_PUBLIC_REPOSITORY_VIA_SSL%-->

	<config evaluator="string-compare" condition="Remote">
		<remote>
			<endpoint>
				<id>alfresco-noauth</id>
				<name>Alfresco - unauthenticated access</name>
				<description>Access to Alfresco Repository WebScripts that do not require authentication</description>
				<connector-id>alfresco</connector-id>
				<endpoint-url>http://%REPOSITORY_HOST%:%REPOSITORY_PORT%/alfresco/s</endpoint-url>
				<identity>none</identity>
			</endpoint>

			<endpoint>
				<id>alfresco</id>
				<name>Alfresco - user access</name>
				<description>Access to Alfresco Repository WebScripts that require user authentication</description>
				<connector-id>alfresco</connector-id>
				<endpoint-url>http://%REPOSITORY_HOST%:%REPOSITORY_PORT%/alfresco/s</endpoint-url>
				<identity>user</identity>
			</endpoint>

			<endpoint>
				<id>alfresco-feed</id>
				<name>Alfresco Feed</name>
				<description>Alfresco Feed - supports basic HTTP authentication via the EndPointProxyServlet</description>
				<connector-id>http</connector-id>
				<endpoint-url>http://%REPOSITORY_HOST%:%REPOSITORY_PORT%/alfresco/s</endpoint-url>
				<basic-auth>true</basic-auth>
				<identity>user</identity>
			</endpoint>

			<endpoint>
				<id>alfresco-api</id>
				<parent-id>alfresco</parent-id>
				<name>Alfresco Public API - user access</name>
				<description>Access to Alfresco Repository Public API that require user authentication.
					This makes use of the authentication that is provided by parent 'alfresco' endpoint.</description>
				<connector-id>alfresco</connector-id>
				<endpoint-url>http://%REPOSITORY_HOST%:%REPOSITORY_PORT%/alfresco/api</endpoint-url>
				<identity>user</identity>
			</endpoint>
		</remote>
	</config>
   
